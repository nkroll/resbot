<!-- Container -->
<div id="container">

    <!-- Top -->
	<div class="top"> 
    </div>
    <!-- /Top -->
    
    <!-- Content -->
    <div id="content" >
   		<!-- New User Sign Up  -->
        <div class="userreg-form">
	        <h3 class="main-heading"><span>New User!</span></h3>
            <div id="userreg-status"></div>
			<%= form_for(@user, :html => {:id => "userregform"}) do |f| %>
		    <p>
				<%= f.label "Name:" %>
				<%= f.text_field(:name, :class => "input") %>
			</p>			
			<p>
			    <%= f.label "Describe what you do in 3-4 words:" %>
			    <%= f.text_field(:tagline, :class => "input") %>				
			</p>
			<p>
		    	<%= f.label :city %>
		    	<%= f.text_field(:city, :class => "input") %>
		    </p>
			<%= f.submit(:class => "submit", :value => "Robot Time!") %>
			<% end %>
		</div>	
		<!-- /New User Sign up -->
        
    </div>
    <!-- /Content -->
    
</div>
<!-- /Container -->
