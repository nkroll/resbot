<h1>Listing skills</h1>

<table>
  <tr>
    <th>Skill set</th>
    <th>Title</th>
    <th>Rank</th>
    <th>List order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.skill_set_id %></td>
    <td><%= skill.title %></td>
    <td><%= skill.rank %></td>
    <td><%= skill.list_order %></td>
    <td><%= link_to 'Show', skill %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
    <td><%= link_to 'Destroy', skill, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

